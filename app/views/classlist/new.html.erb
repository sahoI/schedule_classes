<div class="container">
  <div class="form-body">
    <ul>
      <%#= @classes.each do |class| %>
        <%#= class %>
      <%# end %>
      <%#= @name %>
      <%#= @number %>
      <%#= @season %>
      <%#= @department %>
      <%#= @grade %>
      <%#= @credit %>
      <%#= @teacher %>
<!--      <li><%#= @link %></li>-->
<!--      <li>Name : <%#= @name %></li>-->
